<odoo>

<!-- account.payment.term inherit form view -->
<record id="sbo_account_payment_term_form_view_id" model="ir.ui.view">
    <field name="name">account.payment.term.inherit.view.form</field>
    <field name="model">account.payment.term</field>
    <field name="inherit_id" ref="account.view_payment_term_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="after">
            <field name="installment_yesno" string="PLF ?"/>
            <field name="payment_mode" />
        </xpath>
    </field>
</record>

</odoo>