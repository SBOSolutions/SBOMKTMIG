<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <record id="email_template_mkt_return" model="mail.template">
            <field name="name">Bon de retour</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="email_from">${object.company_id.email}</field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Bon de retour (Ref ${object.name or 'n/a'})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Bon de retour
                    </p>
                </div>
            </field>
            <field name="report_template" ref="action_report_picking_mkt"/>
            <field name="report_name">BonDeRetour_${(object.name or '').replace('/','_')}${object.state == 'draft' and '_draft' or ''}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
