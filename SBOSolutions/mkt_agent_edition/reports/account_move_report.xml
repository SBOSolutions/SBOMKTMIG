<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="grid_report_account_move_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//table[hasclass('o_main_table')]" position="replace">
            <t t-foreach="o.get_report_matrixes()" t-as="grid">
                <t t-set="product_template" t-value="o.env['product.template'].browse(grid['product_tmpl_id'])" />
                <t t-set="product_image" t-value="grid['picture']" />
                <t t-set="lines" t-value="o.invoice_line_ids.filtered(lambda line: line.product_template_id == product_template)" />
                <div class="text-right">
                    <span>Price unit :</span><span
                        t-esc="lines[0].price_unit"
                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                />
                </div>
                <table class="o_view_grid o_product_variant_grid table table-sm">
                    <thead>
                        <tr>
                            <th t-foreach="grid['header']" t-as="column_header" class="o_grid_title_header text-center">
                                <span t-esc="column_header['name']"/>
                                <t t-call="product_matrix.extra_price">
                                    <t t-set="price" t-value="column_header.get('price', False)"/>
                                </t>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="grid['matrix']" t-as="row">
                            <t t-foreach="row" t-as="cell">
                                <td t-if="cell.get('name', False)" class="text-left">
                                    <span t-esc="cell['name']"/>
                                    <t t-if="cell.get('html_color')">
                                        <div style="widht:10px; height:10px;" t-attf-style="background-color: {{cell['html_color']}}">
                                            <span t-esc="cell['html_color']" style="opacity:0"/>
                                        </div>
                                    </t>
                                    <t t-call="product_matrix.extra_price">
                                        <t t-set="price" t-value="cell.get('price', False)"/>
                                    </t>
                                </td>
                                <td t-else="" class="text-center">
                                    <span t-esc="cell.get('qty', 0)" class="o_grid_cell_container"/>
                                </td>
                            </t>
                        </tr>
                    </tbody>
                    <tr class="is-subtotal text-left">
                        <td name="td_section_subtotal" colspan="99">
                            <div class="row">
                                <img style="display: inline;" class="rounded float-start" t-attf-src="data:image/*;base64,{{product_template.image_128}}" />
                                <ul style="list-style-type: none;">
                                    <li>
                                        <span>Qty Total: </span>
                                        <span
                                                t-esc="sum(lines.mapped('quantity'))"/>
                                    </li>
                                    <li>
                                        <span>Subtotal: </span>
                                        <span
                                                t-esc="sum(lines.mapped('price_subtotal'))"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </table>
            </t>
            <t set="has_product_template_no_matrix" t-value="o.invoice_line_ids.filtered(lambda l: l.product_template_id.product_add_mode != 'matrix')"/>
            <table class="table table-sm o_main_table">
                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                <thead t-if="has_product_template_no_matrix" style="display: table-row-group">
                    <tr>
                        <th name="th_description" class="text-left">Description</th>
                        <th name="th_quantity" class="text-right">Quantity</th>
                        <th name="th_priceunit" class="text-right">Unit Price</th>
                        <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_taxes" class="text-right">Taxes</th>
                        <th name="th_subtotal" class="text-right">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-foreach="o.invoice_line_ids.filtered(lambda l: l.product_template_id.product_add_mode != 'matrix')" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                <td class="text-right">
                                    <span t-field="line.quantity"/>
                                    <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                </td>
                                <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span class="text-nowrap" t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span class="text-nowrap" t-field="line.discount"/>
                                </td>
                                <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                </td>
                                <td class="text-right o_price_total">
                                    <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>
