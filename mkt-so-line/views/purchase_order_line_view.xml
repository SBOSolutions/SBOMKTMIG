<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_order_line_mkt_pivot" model="ir.ui.view">
        <field name="name">purchase.order.line.mkt.pivot</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <pivot sample="1">
                <field name="order_id"/>
                <field name="name"/>
                <field name="product_template_id" invisible="1" />
                <field name="product_uom_qty" />
                <field name="price_unit" />
            </pivot>
        </field>
    </record>

    <record id="view_purchase_order_line_mkt_tree" model="ir.ui.view">
        <field name="name">purchase.order.line.mkt.tree</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <tree string="Purchase Order Lines" create="false">
                <field name="order_id"/>
                <field name="name"/>
                <field name="product_template_id" invisible="1" />
                <field name="product_uom_qty" />
                <field name="price_unit" />
            </tree>
        </field>
    </record>

    <record id="purchase_order_lines_action" model="ir.actions.act_window">
        <field name="name">Lignes d'achats</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">tree,pivot</field>
        <field name="view_id" ref="view_purchase_order_line_mkt_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No purchase order found. Let's create one!
            </p><p>
                Once you ordered your products to your supplier, confirm your request for quotation and it will turn into a purchase order.
        </p>
        </field>
    </record>

    <menuitem id="menu_mkt_purchase_order_line" name="Lignes d'achats" action="purchase_order_lines_action" parent="purchase.menu_procurement_management" groups="purchase.group_purchase_manager" sequence="20" />

</odoo>