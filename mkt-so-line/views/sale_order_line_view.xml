<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_line_mkt_pivot" model="ir.ui.view">
        <field name="name">sale.order.line.mkt.pivot</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <pivot sample="1">
                <field name="order_id"/>
                <field name="name"/>
                <field name="product_template_id" invisible="1" />
                <field name="product_uom_qty" />
                <field name="price_unit" />
            </pivot>
        </field>
    </record>

    <record id="view_order_line_mkt_tree" model="ir.ui.view">
        <field name="name">sale.order.line.mkt.tree</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <tree string="Sales Order Lines" create="false">
                <field name="order_id"/>
                <field name="name"/>
                <field name="product_template_id" invisible="1" />
                <field name="product_uom_qty" />
                <field name="price_unit" />
            </tree>
        </field>
    </record>

    <record id="sales_order_lines_action" model="ir.actions.act_window">
        <field name="name">Lignes de devis</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">tree,pivot</field>
        <field name="view_id" ref="view_order_line_mkt_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new quotation, the first step of a new sale!
            </p><p>
            Once the quotation is confirmed by the customer, it becomes a sales order.<br/> You will be able to create an invoice and collect the payment.
        </p>
        </field>
    </record>

    <menuitem id="menu_mkt_sales_order_line" name="Lignes de devis" action="sales_order_lines_action" parent="sale.sale_order_menu" groups="sales_team.group_sale_manager" sequence="10" />



</odoo>