<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale.report_saleorder_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <div t-if="doc.season_id" class="row">
                <div class="col-3 border-blue"/>
                <div class="col-2">
                    Saison : <span class="font-bold" t-field="doc.season_id.name" />
                </div>
                <div class="col-7 border-blue" />
            </div>
            <div class="page">
                <div class="oe_structure"/>
                <br />
                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.partner_invoice_id" class="col-4">
                        <p>
                            <span class="font-bold">Adresse Facturation :</span><br />
                            <span t-field="doc.partner_invoice_id.name" /> <br />
                            <span t-field="doc.partner_invoice_id.street" /> <br />
                            <span t-field="doc.partner_invoice_id.street2" /> <br />
                            <span t-field="doc.partner_invoice_id.zip" /> - <span t-field="doc.partner_invoice_id.city" />
                        </p>
                        <t t-set="address" />
                    </div>
                    <div t-if="doc.partner_shipping_id" class="col-4">
                        <p>
                            <span class="font-bold">Adresse Livraison :</span><br />
                            <span t-field="doc.partner_shipping_id.name" /> <br />
                            <span t-field="doc.partner_shipping_id.street" /> <br />
                            <span t-field="doc.partner_shipping_id.street2" /> <br />
                            <span t-field="doc.partner_shipping_id.zip" /> - <span t-field="doc.partner_shipping_id.city" />
                        </p>
                        <t t-set="information_block" />
                    </div>
                    <div  class="col-4">
                        <p>
                            <div t-if="doc.payment_term_id">
                                Mode de règlement :<br />
                                <span  class="font-bold" t-field="doc.payment_term_id.name" />
                            </div>
                            <div t-if="doc.commitment_date">
                                Date de livraison :<br />
                                <span  class="font-bold" t-field="doc.commitment_date" t-options='{"widget": "date"}' />
                            </div>
                             <br />
                        </p>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="offset-2 col-8 border-blue" />
                </div>
                <div class="row">
                    <div t-if="doc.partner_id" class="col-3">
                        <p>
                            N° Client :<br />
                            <span t-field="doc.partner_id.id" /> <br />
                        </p>
                    </div>
                    <div t-if="doc.partner_id.vat" class="col-3">
                        <p>
                            N° TVA :<br />
                            <span t-field="doc.partner_id.vat" /> <br />
                        </p>
                    </div>
                    <div t-if="doc.order_type" class="col-3">
                        <p>
                            Type :<br />
                            <span t-field="doc.order_type" /> <br />
                        </p>
                    </div>
                    <div t-if="doc.team_id" class="col-3">
                        <p>
                            Agent :<br />
                            <span t-field="doc.team_id.name" /> <br />
                        </p>
                    </div>
                </div>
                <br />
                <h4 class="mt16">
                    <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                        <span t-if="doc.state not in ['draft','sent']">Commande N° </span>
                        <span t-if="doc.state in ['draft','sent']">Devis N° </span>
                    </t>
                    <t t-if="env.context.get('proforma', False) or is_pro_forma">
                        <span>Pro-Forma Invoice # </span>
                    </t>
                    <span t-field="doc.name"/> du <span t-field="doc.date_order" t-options='{"widget": "date"}' />
                </h4>
                <div t-if="doc.ref_cmd" class="row">
                    <div class="col-12 font-blue">
                        <span class="font-bold">Référence : </span><span t-field="doc.ref_cmd" />
                    </div>
                    <div class="offset-2 col-8 border-blue" />
                </div>
                <br />

                <!-- A UPDATE -->
                <div class="row">
                    <div class="col-12">
                        <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2" name="expiration_date">
                        </div>
                    </div>
                </div>
                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                <table t-if="doc.exist_table_with_no_matrix()" class="table table-sm o_main_table">
                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_description" class="text-left">Description</th>
                            <th name="th_quantity" class="text-right">Quantity</th>
                            <th name="th_priceunit" class="text-right">Unit Price</th>
                            <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                <span>Disc.%</span>
                            </th>
                            <th name="th_taxes" class="text-right">Taxes</th>
                            <th name="th_subtotal" class="text-right">
                                <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">

                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="doc.order_line.filtered(lambda l: l.product_template_id.product_add_mode != 'matrix')" t-as="line">

                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_name"><span t-field="line.name"/></td>
                                    <td name="td_quantity" class="text-right">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom"/>
                                    </td>
                                    <td name="td_priceunit" class="text-right">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <td name="td_taxes" class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                    </td>
                                    <td name="td_subtotal" class="text-right o_price_total">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td name="td_section_subtotal" colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <!--                <p style="page-break-before:always;"> </p>-->
                <div class="row">
                    <div class="col-8">
                        <table class="resum_table">
                            <tr>
                                <!-- <th>Brut H.T.</th> -->
                                <th>Net H.T.</th>
                                <th>TVA</th>
                                <th>Net T.T.C.</th>
                            </tr>
                            <tbody>
                                <tr class="resum_table_first_row">
                                    <!-- <td>
                                        <span t-field="doc.amount_untaxed" />
                                    </td> -->
                                    <td>
                                        <span t-field="doc.amount_untaxed" />
                                    </td>
                                    <td>
                                        <span t-field="doc.amount_tax" />
                                    </td>
                                    <td>
                                        <span t-field="doc.amount_total" />
                                    </td>
                                </tr>
                                <tr t-if="doc.amount_delivery" class="resum_table_second_row">
                                    <td colspan="2">Port</td>
                                    <td>
                                    <span t-field="doc.amount_delivery" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-12">
                                <p t-if="doc.payment_term_id.note">
                                    <span t-field="doc.payment_term_id.note"/>
                                </p>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-12">
                            <p>
                                L'acheteur déclare avoir pris connaissance<br/>
                                des Conditions générales de vente<br/>
                                et Notamment de la clause de réserve de propriété<br/>
                                et les accepter dans leur intégralité.
                            </p>
                            </div>
                        </div>
                    </div>
                    <!-- <div class="col-4">
                        <p class="border-one">
                            <strong>Montant brut HT </strong><br />
                            Remise (%) <br />
                            Escompte (%) <br />
                            Net HT <br />
                            avant port Frais <br />
                            (factu./port) <br />
                            <strong>Montant net HT</strong><br />
                            Montant de la TVA <br />
                            <strong>Montant net TTC</strong>
                        </p>
                    </div> -->
                </div>
                <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                </div>
            </div>
        </t>
    </template>
</odoo>
